; Testing function definitions.

	jsr main
	sub pc, 1

	equ SomeValue, 12345

; Main function -- entry point
def main
	set a, SomeValue
	jsr foo
end

; Pretend we're doing something important to the given integer.
; More comment and stuff.
def foo
	equ ShiftCount, 14 ; inline comment
	equ LoopCount, 16

	set i, 0
	set b, 0
	set c, 0

:foo_loop
	ife i, LoopCount
		ifg a, b
			set pc, foo_ret
	
	add i, 1
	shl c, 1
	shl b, 2
	shr a, ShiftCount
	add b, a
	shl a, 2
	add c, 1
	ifg c, b
		set pc, foo_loop_sub

	sub b, c
	add c, 1
	set pc, foo_loop

:foo_loop_sub
	sub c, 1
	set pc, foo_loop

:foo_ret
	shr c, 1
	set a, c
end

